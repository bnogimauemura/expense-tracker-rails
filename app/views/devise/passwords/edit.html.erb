<div style="max-width: 400px; margin: 40px auto; padding: 30px; background: white; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
  <div style="text-align: center; margin-bottom: 30px;">
    <h1 style="margin: 0; font-size: 28px; color: #333; font-weight: 600;">Set New Password</h1>
    <p style="margin: 10px 0 0 0; color: #666; font-size: 16px;">Enter your new password below</p>
  </div>

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <%= f.hidden_field :reset_password_token %>

    <div style="margin-bottom: 20px;">
      <%= f.label :password, "New Password", style: "display: block; margin-bottom: 8px; font-weight: 500; color: #333;" %>
      <% if @minimum_password_length %>
        <small style="color: #666; font-size: 14px;">(At least <%= @minimum_password_length %> characters)</small>
      <% end %>
      <%= f.password_field :password, autofocus: true, autocomplete: "new-password",
          style: "width: 100%; padding: 12px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; transition: border-color 0.2s; margin-top: 5px;",
          placeholder: "Enter your new password" %>
    </div>

    <div style="margin-bottom: 30px;">
      <%= f.label :password_confirmation, "Confirm New Password", style: "display: block; margin-bottom: 8px; font-weight: 500; color: #333;" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          style: "width: 100%; padding: 12px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; transition: border-color 0.2s;",
          placeholder: "Confirm your new password" %>
    </div>

    <div style="text-align: center;">
      <%= f.submit "Update Password", style: "background: #28a745; color: white; border: none; padding: 14px 30px; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer; width: 100%; transition: background-color 0.2s;" %>
    </div>
  <% end %>

  <div style="text-align: center; margin-top: 25px; padding-top: 25px; border-top: 1px solid #e1e5e9;">
    <p style="margin: 0; color: #666; font-size: 14px;">
      <a href="<%= new_user_session_path %>" style="color: #007bff; text-decoration: none; font-weight: 500;">Back to sign in</a>
    </p>
  </div>
</div>
