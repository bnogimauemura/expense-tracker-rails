<div style="max-width: 400px; margin: 40px auto; padding: 30px; background: white; border-radius: 12px; box-shadow: 0 4px 6px rgba(0,0,0,0.1);">
  <div style="text-align: center; margin-bottom: 30px;">
    <h1 style="margin: 0; font-size: 28px; color: #333; font-weight: 600;">Change Password</h1>
    <p style="margin: 10px 0 0 0; color: #666; font-size: 16px;">Enter your current password and a new password</p>
  </div>

  <%= form_for(current_user, url: update_logged_in_user_password_path, html: { method: :patch }) do |f| %>
    <% if current_user.errors.any? %>
      <div style="color: #dc3545; font-size: 14px; margin-bottom: 16px;">
        <% current_user.errors.full_messages.each do |msg| %>
          <div><%= msg %></div>
        <% end %>
      </div>
    <% end %>
    <div style="margin-bottom: 20px;">
      <%= f.label :current_password, "Current Password", style: "display: block; margin-bottom: 8px; font-weight: 500; color: #333;" %>
      <%= f.password_field :current_password, autocomplete: "current-password",
          style: "width: 100%; padding: 12px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; transition: border-color 0.2s; margin-top: 5px;",
          placeholder: "Enter your current password" %>
    </div>
    <div style="margin-bottom: 20px;">
      <%= f.label :password, "New Password", style: "display: block; margin-bottom: 8px; font-weight: 500; color: #333;" %>
      <%= f.password_field :password, autocomplete: "new-password",
          style: "width: 100%; padding: 12px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; transition: border-color 0.2s; margin-top: 5px;",
          placeholder: "Enter a new password" %>
    </div>
    <div style="margin-bottom: 30px;">
      <%= f.label :password_confirmation, "Confirm New Password", style: "display: block; margin-bottom: 8px; font-weight: 500; color: #333;" %>
      <%= f.password_field :password_confirmation, autocomplete: "new-password",
          style: "width: 100%; padding: 12px; border: 2px solid #e1e5e9; border-radius: 8px; font-size: 16px; box-sizing: border-box; transition: border-color 0.2s; margin-top: 5px;",
          placeholder: "Confirm your new password" %>
    </div>
    <div style="text-align: center;">
      <%= f.submit "Update Password", style: "background: #28a745; color: white; border: none; padding: 14px 30px; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer; width: 100%; transition: background-color 0.2s;" %>
    </div>
  <% end %>
  <div style="text-align: center; margin-top: 25px;">
    <a href='<%= edit_user_registration_path %>' style='color: #007bff; text-decoration: none; font-size: 15px;'>Back to Settings</a>
  </div>
</div> 