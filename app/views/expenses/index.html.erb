<h1>Expenses</h1>

<%= link_to "Add Expense", new_expense_path %>

<h2>Total: ¥ <%= @total_price %></h2>

<ul>
    <% @expenses.each do |expense| %>
        <li>
          <strong><%= expense.date %></strong> -
          <%= expense.description %> -
          ¥<%= expense.price %> -
          <%= expense.category %>
        </li>
    <% end %>
</ul>