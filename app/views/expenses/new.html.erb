<h1>New Expense</h1>

<%= form_with model: @expense, local: true do |form| %>
    <p>
      <%= form.label :date %><br>
      <%= form.date_field :date %>
    </p>

    <p>
      <%= form.label :description %><br>
      <%= form.text_field :description %>
    </p>

    <p>
      <%= form.label :price %><br>
      <%= form.number_field :price %>
    </p>

    <p>
      <%= form.label :category %><br>
      <%= form.text_field :category %>
    </p>

    <p>
      <%= form.submit "Save" %>
    </p>
<% end %>